@model NanolekPrototype.EntityModels.Models.FormReceptionAndMovementOfBulkProduct

@{
    ViewData["Title"] = "Commentary";
}
<div class="header-and-back-button">
    <h1>Отправить на доработку</h1>
    <a class="btn nav-back-button" asp-controller="PackagingProtocols" asp-action="Details" asp-route-id="@Model.PackagingProtocolId">Вернуться назад</a>
</div>
<hr />

<form asp-action="SendOnRevisionForm">
    <div class="form-group">
        <label asp-for="Note" class="control-label"></label>
        <input asp-for="Note" class="form-control" />
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Отправить на доработку" class="btn btn-primary" />
    </div>
</form>

@{
    await Html.RenderPartialAsync("~/Views/Shared/SendOnRevisionPartial.cshtml");
}

