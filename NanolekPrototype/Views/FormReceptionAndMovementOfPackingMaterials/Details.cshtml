        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>

    <h5>Прием материала</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionOfMaterials.First().Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionOfMaterials.First().ReceivedFoil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionOfMaterials.First().RemainingProduction)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionOfMaterials.First().SAPPart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionOfMaterials.First().ManufacturerSerialNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionOfMaterials.First().AnalyticalSheetNumberOKK)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionOfMaterials.First().IsFoilMeetsControlParameters)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionOfMaterials.First().ShiftMaster)
                </th>
                <th>
                    <a asp-controller="TableReceptionOfMaterials" asp-action="Create" asp-route-formid="@Model.Id">Добавить</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ReceptionOfMaterials)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceivedFoil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RemainingProduction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SAPPart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufacturerSerialNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnalyticalSheetNumberOKK)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFoilMeetsControlParameters)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShiftMaster.FullName)
                </td>
                <td>
                    <a asp-controller="TableReceptionOfMaterials" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-controller="TableReceptionOfMaterials" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-controller="PackagingProtocols" asp-action="Details" asp-route-id="@Model.PackagingProtocol.Id">Назад</a>
</div>
