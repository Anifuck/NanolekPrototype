        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsStoredInProduction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseFor1000Packs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpenseFor1000Packs)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsCorrespondsToConsumptionRate)
        </dt>
        <dd class = "col-sm-10">
