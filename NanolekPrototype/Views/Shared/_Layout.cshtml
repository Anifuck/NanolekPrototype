@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PackagingProtocols</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/SideBar.css" />
    <link rel="stylesheet" href="~/css/LoginForm.css" />
    <link rel="stylesheet" href="~/css/Main.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body id ="layoutBackground">
@if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                <div id="navbarLogo">
                    <img src="/LogoDirectum.png" class="img-fluid" id ="LogoSidebarNavbar" alt="Responsive image">
                </div>
                
                    <ul class="navbar-nav">
                        <li id="exitButton">
                            <img src="/Exit.png" class="img-fluid" alt="Responsive image">
                            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                                <button type="submit" class="nav-link btn btn-link text-white">Выход</button>
                            </form>
                        </li>
                    </ul>
                
            </nav>
        </header>

        <div class="wrapper">
            <!-- Sidebar  -->
            <nav id="sidebar">
                <ul class="components">
                    <li class="nav-item">
                    <partial name="_SidebarLoginPartial" />
                    </li>
                    <li class="nav-item">
                        <img src="/LK.png" class="img-fluid" alt="Responsive image">
                        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Index">Личный кабинет</a>
                    </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <img src="/PackagingProtocols.png" class="img-fluid" alt="Responsive image">
                        <a class="nav-link text-white" asp-area="" asp-controller="PackagingProtocols" asp-action="Index">Протоколы упаковки</a>
                    </li>
                }
                @if (User.IsInRole("admin"))
                {
                    <li class="nav-item">
                        <img src="/Users.png" class="img-fluid" alt="Responsive image">
                        <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Index">Пользователи</a>
                    </li>
                }
                    <li class="nav-item">
                        <img src="/Exit.png" class="img-fluid" alt="Responsive image">
                        <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                            <button type="submit" class="nav-link btn btn-link text-white">Выход</button>
                        </form>
                    </li>
                </ul>
            </nav>

            <div id="content" class="pl-2">
                <main role="main" class="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    { 
        <div id="content" class="pl-2">
          <main role="main" class="main">
              @RenderBody()
          </main>
      </div>

    }
    <!--Container-->




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/AjaxController.js" type="text/javascript" asp-append-version="true"></script>
<script src="~/js/ToolTipOpen.js" type="text/javascript" asp-append-version="true"></script>
<script src="~/js/ModalWindow.js" type="text/javascript" asp-append-version="true"></script>
<script src="~/js/SideBar.js" type="text/javascript" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
