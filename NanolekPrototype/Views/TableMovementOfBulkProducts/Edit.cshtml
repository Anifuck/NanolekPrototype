@model NanolekPrototype.EntityModels.Models.TableMovementOfBulkProduct

@{
    ViewData["Title"] = "Edit";
}

<div class="header-and-back-button">
    <h1>Редактировать запись</h1>
    <a class="btn nav-back-button" asp-controller="FormReceptionAndMovementOfBulkProducts" asp-action="Details" asp-route-id="@Model.FormReceptionAndMovementOfBulkProductId">Вернуться назад</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FormReceptionAndMovementOfBulkProductId" value="@Model.FormReceptionAndMovementOfBulkProductId" />
            <div class="form-group">
                <label asp-for="Executor" class="control-label"></label>
                @Html.DropDownList("ExecutorId", ViewBag.Executors, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="GarbageKg" class="control-label"></label>
                <input asp-for="GarbageKg" class="form-control" />
                <span asp-validation-for="GarbageKg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
