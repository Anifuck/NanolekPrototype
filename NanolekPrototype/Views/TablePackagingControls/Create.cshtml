@model NanolekPrototype.EntityModels.Models.TablePackagingControl

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TablePackagingControl</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsFoilCorrespondenceToSpecification" /> @Html.DisplayNameFor(model => model.IsFoilCorrespondenceToSpecification)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAppereanceWithoutDefects" /> @Html.DisplayNameFor(model => model.IsAppereanceWithoutDefects)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsClarityMarkAndCorrugationPattern" /> @Html.DisplayNameFor(model => model.IsClarityMarkAndCorrugationPattern)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsMatchingVariableData" /> @Html.DisplayNameFor(model => model.IsMatchingVariableData)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBulkProductWithoutVisibleDamage" /> @Html.DisplayNameFor(model => model.IsBulkProductWithoutVisibleDamage)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCorrespondsCountOfTabletsInBlister" /> @Html.DisplayNameFor(model => model.IsCorrespondsCountOfTabletsInBlister)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ActualTemperatureOfCellFormingMin" class="control-label"></label>
                <input asp-for="ActualTemperatureOfCellFormingMin" class="form-control" />
                <span asp-validation-for="ActualTemperatureOfCellFormingMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualTemperatureOfCellFormingMax" class="control-label"></label>
                <input asp-for="ActualTemperatureOfCellFormingMax" class="form-control" />
                <span asp-validation-for="ActualTemperatureOfCellFormingMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualTemperatureOfBlisterAdhesion" class="control-label"></label>
                <input asp-for="ActualTemperatureOfBlisterAdhesion" class="form-control" />
                <span asp-validation-for="ActualTemperatureOfBlisterAdhesion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlisteringSpeed" class="control-label"></label>
                <input asp-for="BlisteringSpeed" class="form-control" />
                <span asp-validation-for="BlisteringSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskMaster" class="control-label"></label>
                <select asp-for="TaskMasterId" class="form-control" asp-items="ViewBag.TaskMasterId"></select>
            </div>
            <input type="hidden" asp-for="FormControlOfPrimaryPackagingId" value="@ViewData["FormControlOfPrimaryPackagingId"]" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="FormControlOfPrimaryPackagings" asp-action="Details" asp-route-id="@ViewData["FormControlOfPrimaryPackagingId"]">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
