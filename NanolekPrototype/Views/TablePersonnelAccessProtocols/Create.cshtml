@model NanolekPrototype.EntityModels.Models.TablePersonnelAccessProtocol

@{
    ViewData["Title"] = "Create";
}

<div class="header-and-back-button">
    <h1>Создать запись</h1>
    <a class="btn nav-back-button" asp-controller="PackagingProtocols" asp-action="Details" asp-route-id="@ViewData["PackagingProtocolId"]">Вернуться назад</a>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="PackagingProtocolId" value="@ViewData["PackagingProtocolId"]" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProtocolNumber" class="control-label"></label>
                <input asp-for="ProtocolNumber" class="form-control" />
                <span asp-validation-for="ProtocolNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProtocolDate" class="control-label"></label>
                <input asp-for="ProtocolDate" class="form-control" />
                <span asp-validation-for="ProtocolDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
