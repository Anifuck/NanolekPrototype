@model NanolekPrototype.EntityModels.Models.TableProcedure

@{
    ViewData["Title"] = "Edit";
}

<div class="header-and-back-button">
    <h1>Редактировать запись</h1>
    <a class="btn nav-back-button" asp-controller="FormSamplingFinishedProducts" asp-action="Details" asp-route-id="@Model.FormSamplingFinishedProductId">Вернуться назад</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FormSamplingFinishedProductId" value="@Model.FormSamplingFinishedProductId" />
            <input type="hidden" asp-for="IsActive" />
            <div class="form-group">
                <label asp-for="Procedure" class="control-label">@Html.DisplayFor(model => model.Procedure)</label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Executor" class="control-label"></label>
                <select asp-for="ExecutorId" class="form-control" asp-items="ViewBag.ExecutorId"></select>
                <span asp-validation-for="ExecutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checker" class="control-label"></label>
                <select asp-for="CheckerId" class="form-control" asp-items="ViewBag.CheckerId"></select>
                <span asp-validation-for="CheckerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
