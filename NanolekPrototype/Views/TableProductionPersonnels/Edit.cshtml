@using NanolekPrototype.EntityModels.Enums
@model NanolekPrototype.EntityModels.Models.TableProductionPersonnel

@{
    ViewData["Title"] = "Edit";
}

<div class="header-and-back-button">
    <h1>Редактировать запись</h1>
    <a class="btn nav-back-button" asp-controller="PackagingProtocols" asp-action="Details" asp-route-id="@Model.PackagingProtocol.Id">Вернуться назад</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="PackagingProtocolId" value="@Model.PackagingProtocol.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                @Html.DropDownList("FullNameId", ViewBag.FullNames, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Step" class="control-label"></label>
                <select asp-for="@Model.Step" asp-items="Html.GetEnumSelectList<ProductionPersonnelStep>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="@Model.Role" asp-items="Html.GetEnumSelectList<ProductionPersonnelRole>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
