@model NanolekPrototype.EntityModels.Models.TableSettingUpTechnologicalEquipment

@{
    ViewData["Title"] = "Edit";
}

<div class="header-and-back-button">
    <h1>Редактировать запись</h1>
    <a class="btn nav-back-button" asp-controller="FormSettingUpTechnologicalEquipments" asp-action="Details" asp-route-id="@Model.FormSettingUpTechnologicalEquipmentId">Вернуться назад</a>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FormSettingUpTechnologicalEquipmentId" asp-items="ViewBag.FormSettingUpTechnologicalEquipmentId" />
            <input type="hidden" asp-for="IsActive" />
            <input type="hidden" asp-for="Action" />
            <div class="form-group">
                @Html.DisplayFor(model => model.Action)
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ServiceTechnician" class="control-label"></label>
                <select asp-for="ServiceTechnicianId" class="form-control" asp-items="ViewBag.ServiceTechnicianId"></select>
                <span asp-validation-for="ServiceTechnicianId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
