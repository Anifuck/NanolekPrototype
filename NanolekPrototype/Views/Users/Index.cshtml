@using Microsoft.AspNetCore.Identity
@using NanolekPrototype.EntityModels.Models
@using NanolekPrototype.Services
@inject UserManager<User> UserManager
@model IEnumerable<NanolekPrototype.EntityModels.Models.User>
@using static NanolekPrototype.Services.RoleTranslator
@{
    ViewBag.Title = "Список пользователей";
}
<div class="header-and-back-button">
    <h1>Пользователи</h1>
    <a class="btn nav-back-button" asp-action="Create">Добавить пользователя</a>
</div>

<div class="main-table">
    <table class="table">
        <thead>
            <tr><th>Email</th><th>ФИО</th><th>Должность</th><th>Роли</th><th></th></tr>
        </thead>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>@user.Position</td>
                <td>
                    @foreach (var role in UserManager.GetRolesAsync(user).Result)
                    {
                        @RoleTranslator.GetRuRoleName(role)<br />
                    }
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                        <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                        <a class="btn btn-sm btn-primary" asp-controller="Roles" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>